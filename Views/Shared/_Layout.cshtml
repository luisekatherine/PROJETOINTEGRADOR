<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROJETOINTEGRADOR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>

<body>
    <header class="cabeçalho">
        <nav>
            <ul>
                <li>
                    <a href="http://localhost:5000/"><img class="cabeçalho-logo" src="~/images/Logo.png"></a>
                </li>
                <li>
                    <a class="nav-link text-darksalmon" asp-area="" asp-controller="Home" asp-action="PaginaInicial">Sobre nós</a>
                </li>
                <li>
                    <a class="nav-link text-darksalmon" asp-area="" asp-controller="Home" asp-action="Agendamento">Agendar consultoria</a>
                </li>
                <li>
                    <a class="nav-link text-darksalmon" asp-area="" asp-controller="Home" asp-action="ListaAgendamento">Listar marcações</a>
                </li>
                <li>
                    <a class="nav-link text-darksalmon" asp-area="" asp-controller="Home" asp-action="Duvidas">Dúvidas</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="border-top footer text-muted">
            <div class="container">
            &copy; Elas te levam
            Email: contato@elastelevam.com.br
            Whatsapp: +55 51 9 9999-9999
        </div>
        </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
